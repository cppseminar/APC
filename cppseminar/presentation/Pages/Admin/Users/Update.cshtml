@page
@model presentation.Pages.Admin.Users.UpdateModel
@{
}

<h3>Update user list</h3>
@if (!ModelState.IsValid)
{
    <h4>Error</h4>
    <p>Please fix following errors and resubmit</p>
    <th:div asp-validation-summary="All"></th:div>
}
<th:form method="post">
    
    <table class="table">
        <tr>
            <td>
                <th:label asp-for="NewUserList.UserList"></th:label>
            </td>
            <td>
                <th:textarea class="form-control" asp-for="NewUserList.UserList"></th:textarea>
                <th:span asp-validation-for="NewUserList.UserList"></th:span>
            </td>
        </tr>
        <tr>
            <td>
                <th:label asp-for="NewUserList.ClaimName"></th:label>
            </td>
            <td>
                <th:input asp-for="NewUserList.ClaimName" />
                <th:span asp-validation-for="NewUserList.ClaimName"></th:span>
            </td>
        </tr>
        <tr>
            <td>
                <th:label asp-for="NewUserList.ClaimValue"></th:label>
            </td>
            <td>
                <th:input asp-for="NewUserList.ClaimValue" />
                <th:span asp-validation-for="NewUserList.ClaimValue"></th:span>
            </td>
        </tr>
    </table>

    <button type="submit" class="btn btn-primary">Update user list</button>

</th:form>
